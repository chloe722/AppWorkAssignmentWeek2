<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thhsu.chloe.appworkassignmentweek2.MainActivity"
    >

    <LinearLayout
        android:id="@+id/caculatorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/caculatorHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mathInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/mathResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caculatorBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3D4241"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caculatorHead"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/buttonC"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_c" />

                <ImageButton
                    android:id="@+id/buttonChangeSign"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_changesign" />

                <ImageButton
                    android:id="@+id/buttonPercent"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_percent" />

                <ImageButton
                    android:id="@+id/buttonDivide"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_divide" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_7" />

                <ImageButton
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_8" />

                <ImageButton
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_9" />

                <ImageButton
                    android:id="@+id/buttonTimes"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_times" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_4" />

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_5" />

                <ImageButton
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_6" />

                <ImageButton
                    android:id="@+id/buttonMinus"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_minus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_1" />

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_2" />

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_3" />

                <ImageButton
                    android:id="@+id/buttonPlus"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_plus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button0"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_0" />

                <ImageButton
                    android:id="@+id/buttonPoint"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_point" />

                <ImageButton
                    android:id="@+id/buttonEquals"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/button_equals" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
